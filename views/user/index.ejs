<title>Home</title>
<section class="home-page">
    <div class="rap">
        <div class="menu-div" id="menu-div">
            <div class="menu-icon mt-2">
                <a href="/"><i class="bi bi-house-door-fill"></i> Home</a>
                <a href="" class="mt-1"><i class="bi bi-record-circle"></i> Anime</a>
                <a href="" class="mt-1 mb-2"><i class="bi bi-film"></i> Movie</a>
                <%if (user) { %>
                    <%if (user.admin) { %>
                        <a href="/admin" class="mt-1 mb-2"><i class="bi bi-palette"></i> Admin</a>
                    <% } %>
                    <a href="/auth/logout" class="mt-1 mb-2 text-danger mob-icons"><i class="bi bi-box-arrow-right"></i> Log Out</a>
                <% } else { %>
                    <a href="/auth/signin" class="mt-1 mb-2 mob-icons"><i class="bi bi-person-fill-check"></i> Signin</a>
                    <a href="/auth/signup" class="mt-1 mb-2 text-info mob-icons"><i class="bi bi-person-fill-add"></i> Signup</a>
                <% } %>
            </div>
            <div class="history-div">
                <h3 class="text-center mb-3">History</h3>
                <% for (let key in historylog) { %>
                    <div class="text-center history mt-2">
                        <img src="/videos/img/<%= historylog[key].img %>" alt="img ">
                        <span>
                            <%= historylog[key].title %>..
                        </span>
                    </div>
                    <% } %>
            </div>
        </div>
        <div class="main-div p-1" id="main-div">
            <% for (let key in allvideo) { %>
                <div class="video p-3">
                    <a href="/video/<%= allvideo[key]._id %>">
                        <img src="/videos/img/<%= allvideo[key].img %> " alt="img">
                        <div class="info">
                            <p>
                                <%= allvideo[key].title %>
                            </p>
                            <span><i class="bi bi-eye"></i>
                                <%= allvideo[key].views %> views
                            </span> |
                            <span><i class="bi bi-card-list"></i>
                                <%= allvideo[key].category %>
                            </span>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </div>
</section>
<script>
    $('.nav-icon').click(function () {
        $('#menu-div').toggle()
        $('#main-div').toggle()
    })
</script>