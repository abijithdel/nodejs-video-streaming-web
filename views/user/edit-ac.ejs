<title><%= user.email %> - Profile edit</title>
<section class="edit-profile">
    <div class="rap">
        <h3 class="text-center">Edit User</h3>
        <form action="/ac/edit" method="post" enctype="multipart/form-data">
            <label for="email">Email</label> <br>
            <input type="email" name="email" placeholder="Email" value="<%= user.email %>" required> <br>
            <label for="profile">Profile img</label> <br>
            <input type="file" name="profile"> <br>
            <img src="/userprofile/<%= user.img %>" alt="img" style="height: 50px; width: 50px; border-radius: 50%;" > <br>
            <button>Update</button>
        </form>
    </div>
</section>